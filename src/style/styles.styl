*
  margin: 0
  padding: 0
  font-family "Monaco", monospace

@import url('https://fonts.googleapis.com/css2?family=Poller+One&display=swap');

.page
  background-image url('https://sm.ign.com/ign_ru/screenshot/default/ydaaqjnxhlz66zmrz3t58d_c3rb.jpg')
  height 100vh
  background-size cover
  background-position center

.page__header
  height 75px
  box-shadow 0 5px 12px rgba(1,1,1, 0.8)
  display grid
  grid-auto-flow column
  align-items center
  padding 0 65px

.header__logo
  height 70px

.navigation__container
  display grid
  grid-auto-flow column
  justify-content end
  grid-column-gap 35px

.navigation__list
  list-style none

.navigation__item
  text-decoration none
  font-size 18px
  font-weight bold
  font-family: 'Poller One', cursive;
  background: -webkit-linear-gradient(#b7b7b7, #fff, #b7b7b7);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;

.page__main
  margin-left 65px
  margin-top 75px
  display grid
  grid-auto-flow column
  margin-right 65px

.main__image
  background-image url("https://i1.wp.com/makingstarwars.net/wp-content/uploads/2019/08/A486EE77-8D94-4400-BC14-76D06D8E4371.jpeg?resize=692%2C1024&ssl=1")
  width 354px
  height 524px
  background-size cover
  box-shadow 0 5px 15px rgba(1,1,1,1)

.main__text
  color white
  box-shadow 0 5px 15px rgba(1,1,1,1)
  margin-left 50px
  padding 25px
  background-color rgba(1,1,1, 0.5)

.buttons__item
  width 115px
  font-size 16px
  padding-top 2.5px
  padding-bottom: 2.5px;
  border-radius 5px
  background-color transparent
  border 2px solid;
  border-top-color #acacac
  border-bottom-color #acacac
  border-left-color #fff
  border-right-color #fff
  color #fff
  cursor pointer
  box-shadow 0 4px 9px 0 rgba(0, 0, 0, 0.5)
